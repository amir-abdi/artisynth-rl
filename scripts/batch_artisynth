#!/bin/bash
MODEL=$1
ARGS=$2
NUM_ENVS=$3
START_PORT=$4
echo "Running artisynth: " Count:$NUM_ENVS $MODEL with args: $ARGS Staring Port:$START_PORT

for (( p=$START_PORT; p<$START_PORT+$NUM_ENVS; p++ ))
do
    echo "run artisynth at port:" $p
    if [ "$p" = "$2" ]; then
        artisynth -model artisynth.models.lumbarSpine.RlLumbarSpineModel [ -port $p ] -play -noTimeline &
    else
        artisynth -model artisynth.models.lumbarSpine.RlLumbarSpineModel [ -port $p ] -play -noTimeline -noGui &
    fi
done